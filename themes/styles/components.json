{
  "media-item": {
    "styles": {
      "default": {
        "border-radius": "4px",
        "display": "block",
        "box-shadow": "0px 0px 0 1px var(--global-light-gray)"
      }
    }
  },
  "media-item-title": {
    "styles": {
      "default": {
        "display": "block",
        "color": "var(--global-neutral-low)",
        "font-weight": "var(--global-font-weight-6)",
        "font-size": "var(--global-font-size-4)",
        "line-height": "var(--global-line-height-6)"
      }
    }
  },
  "media-item-caption": {
    "styles": {
      "default": {
        "display": "block",
        "color": "var(--global-neutral-low)",
        "text-transform": "uppercase",
        "font-size": "var(--global-font-size-1)"
      }
    }
  },
  "media-item-credit": {
    "styles": {
      "default": {
        "display": "block",
        "color": "var(--global-neutral-low)",
        "text-transform": "uppercase",
        "font-size": "var(--global-font-size-1)"
      }
    }
  },
  "media-item-fig-caption": {
    "styles": {
      "default": {
        "border-radius": "0 0 4px 4px",
        "border-top": "none",
        "padding": "8px 16px"
      }
    }
  }
}
